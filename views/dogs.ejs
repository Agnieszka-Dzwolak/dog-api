<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="/css/style.css" />
        <title>Dogs</title>
    </head>
    <body>
      <%- include('./includes/nav.ejs', {token: token}) %>
        <header>
            <h1>Dogs</h1>
        </header>

        <main>
          <% dogs.forEach((dog)=>{ %>
            <div class="dog-container">
              <img src="<%= dog.img %>" alt="<%= dog.name%>">
              <h2><%= dog.name%></h2>
              <p><%= dog.breed%></p>
              <p>Age: <%= dog.age%></p>
            
              <button><a href="/api/dogs/<%= dog.id%>">Details</a></button>
            </div>

          <%})%>
        </main>
    </body>
</html>
